<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceEditorFragment"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C121E"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="file.wav"
            android:textSize="26dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/ib_save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_save_24"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:background="@drawable/image_button_background"
            app:tint="@drawable/image_button_tint"/>
    </LinearLayout>

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/rsb_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        app:rsb_indicator_margin="20dp"
        app:rsb_indicator_padding_bottom="10dp"
        app:rsb_indicator_padding_left="10dp"
        app:rsb_indicator_padding_right="10dp"
        app:rsb_indicator_padding_top="10dp"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_indicator_text_size="15dp"
        app:rsb_progress_color="@color/neon"
        app:rsb_indicator_background_color="@color/neon"
        app:rsb_thumb_drawable="@drawable/rsb_thumb"
        app:rsb_mode="range" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ib_undo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="@dimen/padding_10"

                android:background="@drawable/image_button_background"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_save_24"
                app:tint="@drawable/image_button_tint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Undo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ib_trim"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="@dimen/padding_10"
                android:scaleType="fitXY"
                android:background="@drawable/image_button_background"
                android:src="@drawable/ic_baseline_content_cut_24"
                app:tint="@drawable/image_button_tint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Trim"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ib_remove_middle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="@dimen/padding_10"
                android:scaleType="fitXY"
                android:background="@drawable/image_button_background"
                android:src="@drawable/ic_baseline_save_24"
                app:tint="@drawable/image_button_tint"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove\n Middle"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="19dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ib_redo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="@dimen/padding_10"
                android:scaleType="fitXY"
                android:background="@drawable/image_button_background"
                android:src="@drawable/ic_baseline_redo_24"
                app:tint="@drawable/image_button_tint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Redo"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/sb_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_total_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/ib_play_editor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/image_button_background"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_play_arrow_24"
        app:tint="@drawable/image_button_tint"/>
</LinearLayout>